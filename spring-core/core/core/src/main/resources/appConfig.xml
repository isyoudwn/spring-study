<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="memberRepository" class="isyoudwn.core.member.MemoryMemberRepository"/>

    <bean id="memberService" class="isyoudwn.core.member.MemberServiceImpl">
        <constructor-arg name="memberRepository" ref="memberRepository" />
    </bean>

    <bean id="discountPolicy" class="isyoudwn.core.discount.RateDiscountPolicy"></bean>


    <bean id="orderService" class="isyoudwn.core.order.OrderServiceImpl">
        <constructor-arg name ="memberRepository" ref="memberRepository"></constructor-arg>
        <constructor-arg name="discountPolicy" ref="discountPolicy"></constructor-arg>
    </bean>



</beans>